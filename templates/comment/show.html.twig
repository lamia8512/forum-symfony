{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ comment.message }}</td>
            </tr>
            <tr>
                <th>Creation_date</th>
                <td>{{ comment.creationDate ? comment.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Modification_date</th>
                <td>{{ comment.modificationDate ? comment.modificationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_comment_index') }}" class="btn btn-primary my-3">Retour commentaires</a>

    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}" class="btn btn-success mx-2">Modifier</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
