{% extends 'base.html.twig' %}
 
{% block title %}Register{% endblock %}
 
{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
 
            <h1 class="h3 mb-4 text-white text-center">Inscription</h1>
 
            <div class="bg-secondary p-4 rounded shadow">
                {{ form_start(registrationForm) }}
                    <div class="mb-3 text-white">
                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3 text-white">
                        {{ form_row(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
                    </div>
 
                    <div class="mb-3 text-white">
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Mot de passe',
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>
 
                    <div class="form-check mb-3">
                        {{ form_row(registrationForm.agreeTerms, {
                            label_attr: {'class': 'form-check-label text-white'},
                            attr: {'class': 'form-check-input'}
                        }) }}
                    </div>
 
                    <button type="submit" class="bg-success-subtle w-100  mt-3">S'inscrire</button>
                {{ form_end(registrationForm) }}
            </div>
 
        </div>
    </div>
</div>
{% endblock %}
 